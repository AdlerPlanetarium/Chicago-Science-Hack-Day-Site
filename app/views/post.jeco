<li class='article' data-title='<%=@title.replace(" ","_")  %>'>
    <div class='articleContent'>
      <h2 class='articleTitle'><%=@title%></h2>
      <p class='subheading'>Posted by <%=@author%> <%=@posted_at%></p>
      <div class='media'><img width=420 src='<%=@media%>' /> </div> 
      <p class='blurb'>
        <%=@blurb%>
      </p>
    </div>
</li>